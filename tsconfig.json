{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",

    "types": [
      "foundry-pf2e",
      "@typhonjs-fvtt/runtime/types/fvtt-shim/pf2e"
    ],

    "isolatedModules": true,
    "sourceMap": true,

    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
